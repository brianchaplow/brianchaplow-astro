---
interface TimelineItem {
  before: string;
  after: string;
  improvement: string;
}

interface Props {
  items: TimelineItem[];
  beforeTitle?: string;
  afterTitle?: string;
}

const { items, beforeTitle = 'v1 (Original)', afterTitle = 'v2 (Current)' } = Astro.props;
---

<div class="evolution-timeline not-prose my-12">
  <div class="timeline-header">
    <div class="timeline-version before">
      <span class="version-dot"></span>
      {beforeTitle}
    </div>
    <div class="timeline-arrow">
      <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
      </svg>
    </div>
    <div class="timeline-version after">
      <span class="version-dot"></span>
      {afterTitle}
    </div>
  </div>
  
  <div class="timeline-items">
    {items.map((item, i) => (
      <div class="timeline-item" style={`--delay: ${i * 100}ms`}>
        <div class="item-before">
          <span class="item-icon">❌</span>
          <span class="item-text">{item.before}</span>
        </div>
        <div class="item-arrow">
          <div class="arrow-line"></div>
          <div class="arrow-head">→</div>
        </div>
        <div class="item-after">
          <span class="item-icon">✅</span>
          <span class="item-text">{item.after}</span>
        </div>
        <div class="item-improvement">
          <span class="improvement-badge">{item.improvement}</span>
        </div>
      </div>
    ))}
  </div>
</div>

<style>
  .evolution-timeline {
    background: linear-gradient(135deg, rgba(0, 212, 255, 0.03) 0%, rgba(139, 92, 246, 0.03) 100%);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 1rem;
    padding: 2rem;
    overflow: hidden;
  }
  
  .timeline-header {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 2rem;
    margin-bottom: 2rem;
    padding-bottom: 1.5rem;
    border-bottom: 1px solid rgba(255, 255, 255, 0.08);
  }
  
  .timeline-version {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.85rem;
    font-weight: 600;
  }
  
  .timeline-version.before { color: #888; }
  .timeline-version.after { color: #00ff88; }
  
  .version-dot {
    width: 10px;
    height: 10px;
    border-radius: 50%;
    background: currentColor;
  }
  
  .timeline-version.after .version-dot {
    box-shadow: 0 0 10px currentColor;
  }
  
  .timeline-arrow {
    color: #00d4ff;
    animation: pulse-arrow 2s ease-in-out infinite;
  }
  
  @keyframes pulse-arrow {
    0%, 100% { transform: translateX(0); opacity: 1; }
    50% { transform: translateX(5px); opacity: 0.7; }
  }
  
  .timeline-items {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
  
  .timeline-item {
    display: grid;
    grid-template-columns: 1fr auto 1fr auto;
    align-items: center;
    gap: 1rem;
    padding: 1rem 1.25rem;
    background: rgba(255, 255, 255, 0.02);
    border-radius: 0.75rem;
    opacity: 0;
    transform: translateY(20px);
    animation: slideIn 0.5s ease forwards;
    animation-delay: var(--delay);
  }
  
  @keyframes slideIn {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  .timeline-item:hover {
    background: rgba(255, 255, 255, 0.04);
  }
  
  .item-before, .item-after {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }
  
  .item-before {
    justify-content: flex-end;
    text-align: right;
  }
  
  .item-after {
    justify-content: flex-start;
  }
  
  .item-icon {
    font-size: 1rem;
    flex-shrink: 0;
  }
  
  .item-text {
    font-size: 0.9rem;
  }
  
  .item-before .item-text {
    color: #888;
  }
  
  .item-after .item-text {
    color: #00ff88;
    font-weight: 500;
  }
  
  .item-arrow {
    display: flex;
    align-items: center;
    gap: 0.25rem;
    color: #00d4ff;
    flex-shrink: 0;
  }
  
  .arrow-line {
    width: 20px;
    height: 2px;
    background: linear-gradient(90deg, rgba(0, 212, 255, 0.2), rgba(0, 212, 255, 0.6));
  }
  
  .arrow-head {
    font-size: 0.8rem;
    animation: arrow-flow 1.5s ease-in-out infinite;
    animation-delay: var(--delay);
  }
  
  @keyframes arrow-flow {
    0%, 100% { opacity: 0.4; }
    50% { opacity: 1; }
  }
  
  .item-improvement {
    flex-shrink: 0;
  }
  
  .improvement-badge {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.65rem;
    color: #00d4ff;
    background: rgba(0, 212, 255, 0.1);
    padding: 0.3rem 0.6rem;
    border-radius: 0.25rem;
    white-space: nowrap;
  }
  
  @media (max-width: 768px) {
    .timeline-item {
      grid-template-columns: 1fr;
      gap: 0.75rem;
      text-align: left;
    }
    
    .item-before, .item-after {
      justify-content: flex-start;
      text-align: left;
    }
    
    .item-arrow {
      justify-content: center;
    }
    
    .item-improvement {
      justify-self: start;
    }
    
    .timeline-header {
      flex-direction: column;
      gap: 1rem;
    }
  }
</style>
