---
interface Props {
  status: 'active' | 'completed' | 'archived';
  showLabel?: boolean;
}

const { status, showLabel = true } = Astro.props;

const statusConfig = {
  active: {
    color: 'bg-green-400',
    textColor: 'text-green-400',
    label: 'Active',
  },
  completed: {
    color: 'bg-cyan-400',
    textColor: 'text-cyan-400',
    label: 'Completed',
  },
  archived: {
    color: 'bg-neutral-400',
    textColor: 'text-neutral-400',
    label: 'Archived',
  },
};

const config = statusConfig[status];
---

<div class="flex items-center gap-2">
  <span class:list={["w-2 h-2 rounded-full", config.color]}></span>
  {showLabel && <span class={config.textColor}>{config.label}</span>}
</div>
