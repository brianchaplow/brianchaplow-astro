---
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
import site from '@/data/site.json';

interface Props {
  title?: string;
  description?: string;
  ogTitle?: string;
  ogType?: string;
  ogImage?: string;
  robots?: string;
}

const { 
  title, 
  description = site.description,
  ogTitle,
  ogType = 'website',
  ogImage = `${site.url}/og-image.jpg`,
  robots = 'index, follow',
} = Astro.props;

const pageTitle = title ? `${title} | ${site.title}` : site.title;
const canonicalURL = new URL(Astro.url.pathname, site.url);
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />

  <title>{pageTitle}</title>
  <meta name="description" content={description} />
  <meta name="author" content={site.author.name} />
  <link rel="canonical" href={canonicalURL} />
  <meta name="robots" content={robots} />

  {/* Icons */}
  <link rel="icon" href="/favicon.ico" sizes="any" />
  <link rel="icon" type="image/png" href="/favicon-32x32.png" sizes="32x32" />
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
  <meta name="theme-color" media="(prefers-color-scheme: light)" content="#e8f2f7" />
  <meta name="theme-color" media="(prefers-color-scheme: dark)" content="#0b0f14" />

  {/* Open Graph & Twitter Cards */}
  <meta property="og:site_name" content={site.title} />
  <meta property="og:title" content={ogTitle || title || site.title} />
  <meta property="og:description" content={description} />
  <meta property="og:type" content={ogType} />
  <meta property="og:url" content={canonicalURL} />
  <meta property="og:image" content={ogImage} />
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content={ogTitle || title || site.title} />
  <meta name="twitter:description" content={description} />
  <meta name="twitter:image" content={ogImage} />

  {/* Schema.org JSON-LD: Person */}
  <script type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "Person",
    "name": site.author.name,
    "jobTitle": site.tagline,
    "description": site.description,
    "url": `${site.url}/`,
    "email": `mailto:${site.author.email}`,
    "sameAs": [
      site.author.linkedin,
      site.author.github,
      "https://bytesbourbonbbq.com/"
    ]
  })} />

  <slot name="head" />

  {/* Umami Analytics */}
  <script defer src="https://analytics.bytesbourbonbbq.com/script.js" data-website-id="e3bb3ae3-01f2-43ba-b42b-3e43b6644f09"></script>
</head>

<body class="bg-slate-950 text-neutral-100 antialiased selection:bg-cyan-400/30">
  
  <Header>
    <slot name="hero" slot="hero" />
  </Header>

  <main class="mx-auto max-w-6xl px-6">
    <slot />
  </main>

  <Footer />

  {/* Enhanced Event Tracking */}
  <script src="/assets/js/tracking.js" defer></script>

  <slot name="scripts" />
</body>
</html>

<style is:global>
  /* Focus styles */
  a:focus-visible, button:focus-visible { 
    outline: 2px solid rgba(34,211,238,.8); 
    outline-offset: 2px; 
  }

  /* Architecture Diagram Styles (for homelab-soc-v2) */
  .arch-diagram {
    background: linear-gradient(180deg, #12121a 0%, #0a0a0f 100%);
    border: 1px solid rgba(255,255,255,0.1);
    border-radius: 16px;
    padding: 32px;
    font-family: 'Inter', system-ui, sans-serif;
    color: #e0e0e0;
  }
  .arch-diagram * { box-sizing: border-box; }
  .arch-layer { margin-bottom: 20px; }
  .arch-layer-label {
    font-family: 'JetBrains Mono', ui-monospace, monospace;
    font-size: 0.7rem;
    text-transform: uppercase;
    letter-spacing: 2px;
    color: #666;
    margin-bottom: 12px;
    display: flex;
    align-items: center;
    gap: 8px;
  }
  .arch-layer-label::before {
    content: '';
    width: 3px;
    height: 14px;
    border-radius: 2px;
  }
  .arch-layer.edge .arch-layer-label::before { background: #f97316; }
  .arch-layer.cloud .arch-layer-label::before { background: #3b82f6; }
  .arch-layer.firewall .arch-layer-label::before { background: #ef4444; }
  .arch-layer.core .arch-layer-label::before { background: #00d4ff; }
  .arch-layer.segments .arch-layer-label::before { background: #00ff88; }
  .arch-component-row {
    display: flex;
    justify-content: center;
    gap: 16px;
    flex-wrap: wrap;
  }
  .arch-component {
    background: rgba(30, 30, 45, 0.8);
    border: 1px solid rgba(255,255,255,0.1);
    border-radius: 12px;
    padding: 14px 20px;
    text-align: center;
    min-width: 140px;
    transition: all 0.2s ease;
  }
  .arch-component:hover {
    border-color: rgba(255,255,255,0.2);
    transform: translateY(-2px);
  }
  .arch-component-icon { font-size: 1.6rem; margin-bottom: 6px; }
  .arch-component-name { font-weight: 600; font-size: 0.9rem; margin-bottom: 3px; }
  .arch-component-detail {
    font-family: 'JetBrains Mono', ui-monospace, monospace;
    font-size: 0.65rem;
    color: #888;
  }
  .arch-component-ip {
    font-family: 'JetBrains Mono', ui-monospace, monospace;
    font-size: 0.7rem;
    color: #00ff88;
    background: rgba(0,255,136,0.1);
    padding: 2px 8px;
    border-radius: 4px;
    margin-top: 6px;
    display: inline-block;
  }
  .arch-component.edge { border-color: rgba(249,115,22,0.5); }
  .arch-component.cloud { border-color: rgba(59,130,246,0.5); }
  .arch-component.firewall { border-color: rgba(239,68,68,0.5); }
  .arch-component.switch { border-color: rgba(0,212,255,0.5); }
  .arch-component.soc { border-color: rgba(0,212,255,0.8); background: rgba(0,212,255,0.05); }
  .arch-protected-sites {
    margin-top: 14px;
    padding: 12px 16px;
    background: linear-gradient(135deg, rgba(249,115,22,0.1) 0%, rgba(239,68,68,0.05) 100%);
    border: 1px solid rgba(249,115,22,0.3);
    border-radius: 10px;
    text-align: center;
  }
  .arch-protected-label {
    font-family: 'JetBrains Mono', ui-monospace, monospace;
    font-size: 0.65rem;
    font-weight: 600;
    color: #f97316;
    letter-spacing: 1px;
  }
  .arch-site-badges {
    display: flex;
    justify-content: center;
    gap: 10px;
    margin: 8px 0;
    flex-wrap: wrap;
  }
  .arch-site-badge {
    font-family: 'JetBrains Mono', ui-monospace, monospace;
    font-size: 0.8rem;
    font-weight: 600;
    color: #fff;
    background: rgba(249,115,22,0.2);
    padding: 5px 12px;
    border-radius: 6px;
  }
  .arch-connector {
    display: flex;
    justify-content: center;
    padding: 8px 0;
  }
  .arch-connector-line {
    width: 2px;
    height: 24px;
    background: linear-gradient(180deg, rgba(255,255,255,0.3), rgba(255,255,255,0.1));
  }
  .arch-connector-arrow {
    color: #666;
    font-size: 0.9rem;
  }
  .arch-vlan-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
    gap: 12px;
    margin-top: 12px;
  }
  .arch-vlan {
    background: rgba(0, 255, 136, 0.05);
    border: 1px solid rgba(0, 255, 136, 0.2);
    border-radius: 10px;
    padding: 12px;
    text-align: center;
  }
  .arch-vlan-id {
    font-family: 'JetBrains Mono', ui-monospace, monospace;
    font-size: 0.7rem;
    color: #00ff88;
    font-weight: 600;
  }
  .arch-vlan-name {
    font-size: 0.85rem;
    font-weight: 600;
    margin: 4px 0;
  }
  .arch-vlan-subnet {
    font-family: 'JetBrains Mono', ui-monospace, monospace;
    font-size: 0.65rem;
    color: #888;
  }
  .arch-flows {
    margin-top: 24px;
    padding-top: 20px;
    border-top: 1px solid rgba(255,255,255,0.1);
  }
  .arch-flows-title {
    font-family: 'JetBrains Mono', ui-monospace, monospace;
    font-size: 0.7rem;
    text-transform: uppercase;
    letter-spacing: 2px;
    color: #666;
    margin-bottom: 16px;
    text-align: center;
  }
  .arch-flow-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 12px;
  }
  .arch-flow-item {
    display: flex;
    align-items: flex-start;
    gap: 12px;
    padding: 12px;
    background: rgba(255,255,255,0.02);
    border-radius: 8px;
  }
  .arch-flow-icon {
    font-size: 1.2rem;
    flex-shrink: 0;
  }
  .arch-flow-content { flex: 1; }
  .arch-flow-title {
    font-size: 0.8rem;
    font-weight: 600;
    margin-bottom: 4px;
  }
  .arch-flow-path {
    font-family: 'JetBrains Mono', ui-monospace, monospace;
    font-size: 0.65rem;
    color: #888;
    line-height: 1.5;
  }
  .arch-flow-path span {
    color: #00d4ff;
  }
  .arch-diagram-footer {
    margin-top: 20px;
    padding-top: 16px;
    border-top: 1px solid rgba(255,255,255,0.05);
    text-align: center;
    font-family: 'JetBrains Mono', ui-monospace, monospace;
    font-size: 0.65rem;
    color: #444;
  }
</style>
